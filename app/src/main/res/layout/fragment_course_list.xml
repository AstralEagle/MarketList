<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CourseListFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ListView
            android:id="@+id/list_course_list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/div_parent_add_item"
            android:background="@drawable/corner"
            android:layout_margin="10dp"
            android:padding="20dp"
            />
        <LinearLayout
            android:id="@+id/div_parent_add_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_barre_add_item"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/list_course_name_product"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/for_buy_product"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:inputType="text"
                android:imeOptions="actionSend"
                android:gravity="center"
                android:autofillHints="name"
                />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>